# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET         /                    controllers.CalendarioController.index()
GET         /index               controllers.UsuarioController.index()
GET         /list                controllers.UsuarioController.list(p:Int ?= 0)

# Essa rota Ã© utilizada apenas no javascript para receber a lista em formato json
GET         /json                controllers.CalendarioController.json()

# Calendario CRUD
POST        /calendario/update  controllers.CalendarioController.update()
POST        /calendario/save  controllers.CalendarioController.save()

# Fazendo CRUD
POST        /save                controllers.UsuarioController.save()
GET         /create              controllers.UsuarioController.create()
GET         /edit/:id            controllers.UsuarioController.edit(id:Integer)
POST        /edit/:id            controllers.UsuarioController.update(id:Integer)
GET         /delete/:id          controllers.UsuarioController.delete(id:Integer)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

#JavaScript Route
GET        /javascriptRoutes      controllers.CalendarioController.javascriptRoutes